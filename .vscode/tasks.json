{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Expo (mobile)",
      "type": "shell",
      "command": "npm",
      "args": ["--workspace", "mobile", "run", "start"],
      "group": "build",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Start Expo (android)",
      "type": "shell",
      "command": "npm",
      "args": ["--workspace", "mobile", "run", "android"],
      "group": "build",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Start Backend (start:dev)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "start:dev"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Debug Backend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "debug"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
