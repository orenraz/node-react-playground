{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Backend (dev:debug)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:debug"],
      "port": 9229,
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true
    },
    {
      "name": "Run Expo (start)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["--workspace", "mobile", "run", "start"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": { "hidden": false }
    },
    {
      "name": "Attach to Backend (9229)",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/backend",
      "remoteRoot": null
    },
    {
      "name": "Run Backend (start:dev)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true
    }
  ],
  "compounds": [
    {
      "name": "Run Backend and Attach",
      "configurations": ["Launch Backend (dev:debug)", "Attach to Backend (9229)"]
    }
  ]
}
